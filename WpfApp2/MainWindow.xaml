<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Figures">
                <MenuItem Header="Circle" Click="Circle_Click"></MenuItem>
                <MenuItem Header="Square" Click="Square_Click"></MenuItem>
                <MenuItem Header="Triangle" Click="Triangle_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Clear" Click="Clear_Click"></MenuItem>
        </Menu>
        <Canvas x:Name="FigursCanvas" Margin="0,25,0,0"/>
    </Grid>
</Window>
